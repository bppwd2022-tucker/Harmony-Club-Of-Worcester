<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-body">
    <h2 class="card-title">Photo</h2>

    <p class="card-text">
      <strong>Album:</strong>
      <%= @photo.album_id %>
    </p>

    <p class="card-text">
      <strong>Title:</strong>
      <%= @photo.title %>
    </p>

    <strong>Photo:</strong>
    <% if @photo.photo.attached? %>
      <%= image_tag @photo.photo %>
    <% else %>
      <p>PHOTO IS NOT ATTACHED</p>
    <% end %>

    <p class="card-text">
      <strong>Description:</strong>
      <%= raw @photo.description %>
    </p>

    <%= link_to 'Edit', edit_photo_path(@photo), class: "btn btn-primary" %> |
    <%= link_to 'Back', photos_path, class: "btn btn-primary" %>
