<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-body">
    <h2 class="card-title">Event</h2>

    <p class="card-text">
      <strong>Title:</strong>
      <%= @event.title %>
    </p>

    <strong>Photo:</strong>
    <% if @event.photo.attached? %>
      <%= image_tag @event.photo %>
    <% else %>
      <p>PHOTO IS NOT ATTACHED</p>
    <% end %>

    <p class="card-text">
      <strong>Details:</strong>
      <%= raw @event.details %>
    </p>

    <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-primary"  %> |
    <%= link_to 'Back', events_path, class: "btn btn-primary"  %>
  </div>
</div>