<h1>Sections</h1>

<ul>
  <% @sections.each do |section| %>
    <li>
      <%= link_to section.title, section %>
    </li>

    <ul>
		<li><%= link_to "Edit", edit_section_path(section) %></li>
		<li><%= link_to "Destroy", section_path(section),
        	method: :delete,
            data: { confirm: "Are you sure?" } %>    	
        </li>
	</ul>
  <% end %>
</ul>

<%= link_to "New Section", new_section_path %>


